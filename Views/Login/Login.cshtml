@model DataCollection.Models.Login
@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_PreLoginLayout.cshtml";
}

<h2>Login Page</h2>

@using (Html.BeginForm("Login", "Login"))
{
    <div class=" form-group">

        @if (ViewBag.InvalidLogin)
        {
            <div class="alert alert-danger">Invalid username/password.</div>
        }

        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
}

